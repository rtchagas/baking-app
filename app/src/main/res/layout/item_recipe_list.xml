<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/card_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_recipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_backdrop_height"
            android:contentDescription="@string/alt_recipe_image"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image_recipe_name_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="@+id/image_recipe"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:srcCompat="@drawable/sp_recipe_title_bg" />

        <TextView
            android:id="@+id/text_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:shadowColor="@color/material_black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/material_white"
            card_view:layout_constraintBottom_toTopOf="@+id/image_recipe_name_bg"
            card_view:layout_constraintStart_toStartOf="@+id/image_recipe"
            card_view:layout_constraintTop_toBottomOf="@+id/image_recipe_name_bg"
            tools:text="Nutella Pie" />

        <TextView
            android:id="@+id/text_recipe_serving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            card_view:layout_constraintBottom_toTopOf="@+id/text_recipe_name"
            card_view:layout_constraintEnd_toStartOf="@+id/icon_servings"
            card_view:layout_constraintTop_toBottomOf="@+id/text_recipe_name"
            tools:text="8" />

        <ImageView
            android:id="@+id/icon_servings"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/alt_recipe_serving"
            android:src="@drawable/ic_service_24dp"
            android:tint="@color/primaryTextColor"
            card_view:layout_constraintBottom_toBottomOf="@+id/text_recipe_serving"
            card_view:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
